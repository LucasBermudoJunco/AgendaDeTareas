<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/amarilloPendiente"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/marcoTarea"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:padding="6dp">

            <CheckBox
                android:id="@+id/checkBoxTareaEstaCompletada"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:shadowColor="@color/white"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/marcoCampos"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textViewTituloTarea"
                    android:layout_width="172dp"
                    android:layout_height="25dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingStart="2dp"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewFechaLimiteTarea"
                    android:layout_width="76dp"
                    android:layout_height="25dp"
                    android:background="@color/blancoOscuro"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:textColor="#000"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>